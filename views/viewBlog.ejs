<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>View Blog | Blogs</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <h1><%= blog.title%></h1>
        <img src="<%= blog.imageUrl%>"  alt="..." width="800px" height="500px">
        <p><%= blog.description%></p>
    </div>
    <div class="container mt-2">
        <img src="<%= blog.createdBy.profileImageURL%>" width="50px" height="50px"> posted by <%=blog.createdBy.fullname %>
    </div>
    <% if (locals.user) {%>
    <div class="container mt-3">
        <h1>Add Comment</h1>
        <form method="post" action="/comment/<%= blog._id%>">
            <div class="mb-3">
                <label for="comment" class="form-label">Comments</label>
                <input type="text" class="form-control" id="comment" name="comment" aria-describedby="comment">
              </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    </div>
    <% } %>
    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <div class="">
        <% comments.forEach(com=>{%>
            <img src="<%= com.createdBy.profileImageURL%>" width="50px" height="50px"> <%=com.createdBy.fullname %>
              <pre><%= com.comment%></pre>
        <% })%>
      </div>
    </div>
    <%- include('./partials/scripts') %>
</body>
</html>