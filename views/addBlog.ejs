<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Add New Blog | Blogs</title>
</head>
<body>
    <%- include('./partials/nav') %>
    <h2>Add Blog PAGE</h2>
    <div class="container mt-4">
        <form method="post" action="/postblog" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label" placeholder="Enter Title">Title</label>
                <input type="text" class="form-control" id="title" name="title">
              </div>
              <div class="mb-3">
                <label for="imageUrl" class="form-label">Cover Image</label>
                <input type="file" class="form-control" id="imageUrl" name="imageUrl">
              </div>
              <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a Description here" id="description" name="description"></textarea>
                <label for="description">Description</label>
              </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>

    </div>

    


    <%- include('./partials/scripts') %>
</body>
</html>